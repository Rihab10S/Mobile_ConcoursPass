<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title -->
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                app:srcCompat="@drawable/img" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestion des Notes"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Filter Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">
                <TextView
                    android:id="@+id/filter_label"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginEnd="8dp"
                    android:text="Filtrer Par Filière:"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/filter_spinner"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:entries="@array/filters" />
            </LinearLayout>

            <!-- Buttons Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">
                <Button
                    android:id="@+id/add_note_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:text="AJOUTER"
                    android:onClick="openAddNoteActivity"
                    android:textColor="#FFFFFF" />
                <Button
                    android:id="@+id/download_csv_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:text="TÉLÉCHARGER CSV"
                    android:textColor="#FFFFFF" />
                <Button
                    android:id="@+id/send_emails_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:text="ENVOYER EMAILS"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Notes List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_note"
                android:padding="8dp" />

            <!-- Empty View -->
            <TextView
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No data available"
                android:visibility="gone"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <!-- Side Navigation Menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_notes"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/menu_dashboardadmin" />

</androidx.drawerlayout.widget.DrawerLayout>
