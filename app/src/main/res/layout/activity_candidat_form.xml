<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Informations personnelles -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informations personnelles"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#3A87F7"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/firstName"
                    android:hint="Prénom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/lastName"
                    android:hint="Nom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/cin"
                    android:hint="CIN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/email"
                    android:hint="Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/studentCode"
                    android:hint="Code Etudiant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/birthDate"
                    android:hint="Date de Naissance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:hint="Genre"
                    android:padding="12dp" />


                <EditText
                    android:id="@+id/country"
                    android:hint="Pays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/city"
                    android:hint="Ville"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/phone"
                    android:hint="Téléphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/filiere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:hint="Choix de Filière"
                    android:padding="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Informations Bac -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informations Bac"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#3A87F7"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">



                <EditText
                    android:id="@+id/serieBac"
                    android:hint="Série Bac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/mentionBac"
                    android:hint="Mention Bac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Informations Diplôme -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informations Diplôme"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#3A87F7"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/diplomeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:hint="Titre du Diplôme"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/annee1Note"
                    android:hint="Note 1ère Année"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/annee2Note"
                    android:hint="Note 2ème Année"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />






                <EditText
                    android:id="@+id/etablissementDiplome"
                    android:hint="Etablissement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />


                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:padding="12dp"
                    android:text="Soumettre"
                    android:textColor="#FFFFFF" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>