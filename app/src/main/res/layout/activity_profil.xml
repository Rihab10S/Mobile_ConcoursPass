<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.ProfilAdminActivity">

    <!-- Toolbar avec un bouton hamburger -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Profil"
        app:titleTextColor="@android:color/white" />

    <!-- Contenu principal de la page Profil -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#FAFAFA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                app:srcCompat="@drawable/img" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="111dp" />

            <ImageView
                android:id="@+id/ivProfilPic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_user_profile"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:elevation="8dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="Profil Picture" />

            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom Prénom"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: candidat@gmail.com"
                android:textSize="16sp"
                android:textColor="#757575"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Téléphone: 06 00 00 00 00"
                android:textSize="16sp"
                android:textColor="#757575"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de naissance: 01/01/2000"
                android:textSize="16sp"
                android:textColor="#757575"
                android:layout_marginBottom="25dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="106dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="25dp" />

            <Button
                android:id="@+id/btnEditProfil"
                android:layout_width="302dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_button"
                android:text="Modifier le profil"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>

    <!-- Menu latéral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:paddingTop="16dp"
        app:menu="@menu/menu_dashboardadmin" />
</androidx.drawerlayout.widget.DrawerLayout>
