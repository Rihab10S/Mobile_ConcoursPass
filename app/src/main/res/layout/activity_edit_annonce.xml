<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9"
    android:padding="16dp">

    <!-- Space for Title Section -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <!-- Image View for the header -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        app:srcCompat="@drawable/img" />

    <!-- Title Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="Modifier une annonce"
        android:textColor="#3A87F7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- CardView to wrap the form -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title EditText -->
            <EditText
                android:id="@+id/title_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_rounded"
                android:hint="Title"
                android:padding="12dp" />

            <!-- Visibility EditText -->
            <EditText
                android:id="@+id/visibility_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_rounded"
                android:hint="Visibility"
                android:padding="12dp" />

            <!-- Status EditText -->
            <EditText
                android:id="@+id/status_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_rounded"
                android:hint="Status"
                android:padding="12dp" />

            <!-- Type EditText -->
            <EditText
                android:id="@+id/type_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_rounded"
                android:hint="Type"
                android:padding="12dp" />

            <!-- Content EditText -->
            <EditText
                android:id="@+id/content_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_rounded"
                android:hint="Content"
                android:padding="12dp" />

            <!-- Save Button -->
            <Button
                android:id="@+id/save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:padding="12dp"
                android:text="Modifier"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
