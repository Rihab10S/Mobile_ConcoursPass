<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Header Section Outside CardView -->
<ImageView
android:id="@+id/header_image"
android:layout_width="120dp"
android:layout_height="120dp"
android:layout_gravity="center"
android:scaleType="centerCrop"
android:src="@drawable/img"
android:elevation="6dp"
android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mes Convocations"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center"
        android:layout_marginVertical="16dp"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/title_ecrit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Concours écrit :"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="start"
        android:layout_marginVertical="8dp"
        android:fontFamily="sans-serif-medium" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">  <!-- Increased padding for a spacious layout -->

        <!-- Hidden ID -->
        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345"
            android:visibility="gone" />

        <!-- Title -->
        <TextView
            android:id="@+id/nom_candidat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom candidat"
            android:textColor="#212121"
            android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

        <!-- Content -->
        <TextView
            android:id="@+id/moyenne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moyenne: 15/20"
            android:textColor="#757575"
            android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:gravity="center" />

        <!-- Download Button -->
        <Button
            android:id="@+id/telechargerConvo_button"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Télécharger Votre Convocation"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/title_oral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Concours oral :"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="start"
        android:layout_marginVertical="8dp"
        android:fontFamily="sans-serif-medium" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="8dp"
        android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">  <!-- Increased padding for a spacious layout -->

        <!-- Hidden ID -->
        <TextView
            android:id="@+id/user_id_oral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345"
            android:visibility="gone" />

        <!-- Title -->
        <TextView
            android:id="@+id/nom_candidat_pral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom candidat"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- Content -->


        <!-- Download Button -->
        <Button
            android:id="@+id/telechargerConvoOral_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Télécharger Votre Convocation"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:gravity="center" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
    </LinearLayout>
